.form
  label
    width 100%
    display block
    font-size 14px
    margin-bottom 5px
  .form-group
    margin-bottom 20px
    textarea
      resize none
    .form-control
      width 300px
      font-size 14px
      outline none
      border 1px solid #eee8d5
      border-radius 2px
      min-height 30px
      padding 0 5px
      background-color rgba(238, 232, 213, 0.55)
      &:focus
        box-shadow 0 0 0 3px #eee8d5

.btn
  background-color #93a1a1
  border-radius 2px
  border none
  color #eee
  padding 0 20px
  height 38px
  line-height @height
  outline none
  font-size 14px
  &:active
    box-shadow inset 0 0 5px #6B6B6B

[v-cloak]
  display none

.error, .success
  background-color rgba(255, 65, 65, 0.79)
  color white
  padding 10px
  margin-bottom 20px
  border-radius 2px

.success
  background-color #39C53D
  color white
